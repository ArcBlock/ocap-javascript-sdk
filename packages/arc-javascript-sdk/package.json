{
  "name": "@arcblock/node-ocap",
  "description": "Node.js SDK for OCAP Service by ArcBlock",
  "version": "0.1.0",
  "author": "wangshijun <shijun@arcblock.io> (https://ocap.arcblock.io)",
  "bugs": {
    "url": "https://github.com/ArcBlock/arc-javascript-sdk/issues",
    "email": "shijun@arcblock.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    "wangshijun <shijun@arcblock.io> (https://ocap.arcblock.io)"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "debug": "^3.1.0",
    "graphql": "^0.13.2",
    "phoenix-channels": "^1.0.0"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^4.0.4",
    "prettier": "^1.6.1",
    "remark-cli": "^4.0.0",
    "remark-preset-github": "^0.0.6"
  },
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://github.com/ArcBlock/arc-javascript-sdk",
  "keywords": [
    "ocap",
    "blockchain",
    "arcblock",
    "sdk",
    "nodejs"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/index.js",
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArcBlock/arc-javascript-sdk"
  },
  "scripts": {
    "lint": "eslint src && remark . -qfo",
    "update-schema": "node tools/update-schema.js",
    "precommit": "lint-staged && CI=1 npm test",
    "prepush": "lint-staged && CI=1 npm test",
    "test": "npm run lint && node tools/jest.js",
    "coverage": "npm run test -- --coverage"
  }
}
